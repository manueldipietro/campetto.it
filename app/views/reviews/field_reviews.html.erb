<h2>Recensioni per <%= @field.nome %></h2>

<div class="reviews-list">
  <% if @reviews.any? %>
    <% @reviews.each do |review| %>
      <div class="review-entry">
        <h3><%= review.titolo %></h3>
        <p><%= review.testo %></p>
        <p>
          Valutazione:
          <% review.valutazione.times do %>
            <i class="fas fa-star" style="color: gold;"></i>
          <% end %>
          <% (5 - review.valutazione).times do %>
            <i class="far fa-star"></i>
          <% end %>
        </p>
        <small>Scritto da <%= review.user.email %> il <%= review.created_at.strftime("%d/%m/%Y") %></small>
      </div>
    <% end %>
  <% else %>
    <p>Nessuna recensione disponibile per questo campo.</p>
  <% end %>
</div>

<!-- Pulsante per Aggiungere una Recensione -->
<div class="mt-3">
  <%= link_to 'Aggiungi Recensione', new_field_review_path(@field), class: 'btn btn-primary' %>
</div>

<!-- Pulsante per Tornare al Dettaglio del Campo -->
<div class="mt-3">
  <%= link_to 'Torna al Campo', field_path(@field), class: 'btn btn-secondary' %>
</div>

