<% provide(:title, 'Administrators sign up') %>
<h1>Sign up</h1>

<div>
    <%= form_for(@administrator) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name%>
        
        <%= f.label :surname %>
        <%= f.text_field :surname %>

        <%= f.label :email %>
        <%= f.text_field :email %>


        <%= f.label :password %>
        <%= f.text_field :password %>

        <%= f.label :password_confirmation, "Confimation:" %>
        <%= f.text_field :password_confirmation %>

        <%= f.submit "Create new administrator", class: "btn btn-primary" %>
        
    <% end %>
</div>